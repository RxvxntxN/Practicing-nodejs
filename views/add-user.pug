doctype html
html
    head
        meta(charset="utf-8")
        title #{pageTitle}
        link(rel="stylesheet", href="/css/main.css")
    body
        header.main-header
            nav.main-header__nav
                ul.main-header__item-list
                    li.main-header__item
                        a(href="/") User
                    li.main-header__item
                        a.active(href="/admin/add-user") Add User
        main
            form(action="/admin/add-user", method="POST")
                input(type="text", name="title", placeholder="User name")
                button(type="submit") Add User